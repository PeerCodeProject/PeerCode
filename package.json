{
  "name": "peercode",
  "displayName": "PeerCode",
  "description": "Realtime Collaborative Code Editor for vscode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "Liquidibrium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeerCodeProject/PeerCode"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Collaboration",
    "Sharing",
    "Remote",
    "WebRTC",
    "Paint",
    "Terminal",
    "Docker",
    "YJS"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "peercode.NewSession",
        "title": "New Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.JoinSession",
        "title": "Join Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.paint",
        "title": "start paint",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/paint.svg",
          "dark": "media/dark/paint.svg"
        }
      },
      {
        "command": "peercode.runDocker",
        "title": "run code",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/run.svg",
          "dark": "media/dark/run.svg"
        }
      },
      {
        "command": "peercode.sharePort",
        "title": "share port",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/addPort.svg",
          "dark": "media/dark/addPort.svg"
        }
      },
      {
        "command": "peercode.shareTerminal",
        "title": "share terminal",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/terminal.svg",
          "dark": "media/dark/terminal.svg"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "peercode.session",
          "name": "PeerCode"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "peercode.JoinSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.NewSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.paint",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        },
        {
          "command": "peercode.runDocker",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        },
        {
          "command": "peercode.sharePort",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        },
        {
          "command": "peercode.shareTerminal",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts,js --fix",
    "test": "node ./out/test/runTest.js",
    "install-wrtc": "cross-env DEBUG=true npm install @cubicleai/wrtc",
    "init-wrtc-old": "node ./scripts/init.js",
    "init-dev": "node ./scripts/wrtc_backup/init-dev.js",
    "vsce-package": "vsce package",
    "deploy": "vsce publish",
    "pre-release": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.19",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/npmlog": "^4.1.4",
    "@types/simple-peer": "^9.11.5",
    "@types/tar-stream": "^2.2.2",
    "@types/uuid": "^9.0.2",
    "@types/vscode": "^1.81.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.20.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "node-loader": "^2.0.0",
    "nodemon": "^3.0.1",
    "perfect-freehand": "^1.2.0",
    "supports-color": "^9.4.0",
    "ts-loader": "^9.4.4",
    "typescript": "~5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "@peculiar/webcrypto": "^1.4.3",
    "@roamhq/wrtc": "^0.7.1",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "bufferutil": "^4.0.7",
    "buildcheck": "^0.0.6",
    "dockerode": "^3.3.5",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "nan": "^2.17.0",
    "node-fetch": "^3.3.2",
    "npmlog": "^7.0.1",
    "path": "^0.12.7",
    "semver": "^7.5.4",
    "simple-peer": "^9.11.1",
    "source-map": "^0.7.4",
    "tar": "^6.1.15",
    "tar-stream": "^3.1.6",
    "utf-8-validate": "^6.0.3",
    "uuid": "^9.0.0",
    "ws": "^8.13.0",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.7"
  }
}
