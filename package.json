{
  "name": "peercode",
  "displayName": "PeerCode",
  "description": "Realtime Collaborative Code Editor for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "peercode.StartSession",
        "title": "Start Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.JoinSession",
        "title": "Join Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.paint",
        "title": "start paint",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/paint.svg",
          "dark": "media/dark/paint.svg"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "peercode.session",
          "name": "PeerCode"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "peercode.JoinSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.StartSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.paint",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts,js --fix",
    "test": "node ./out/test/runTest.js",
    "install": "cross-env DEBUG=true npm install wrtc",
    "init": "node ./scripts/init.js"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/simple-peer": "^9.11.4",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "node-loader": "^2.0.0",
    "perfect-freehand": "^1.0.16",
    "ts-loader": "^9.2.6",
    "typescript": "^4.6.4",
    "vsce": "^2.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@docker/sdk": "^1.0.3",
    "@grpc/grpc-js": "^1.6.7",
    "@mapbox/node-pre-gyp": "^1.0.9",
    "@peculiar/webcrypto": "^1.3.3",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "bufferutil": "^4.0.6",
    "dayjs": "^1.11.2",
    "dockerfile-language-server-nodejs": "^0.9.0",
    "dockerode": "^3.3.1",
    "dotenv": "^16.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "google-protobuf": "^3.12.2",
    "handlebars": "^4.7.7",
    "node-fetch": "^3.2.3",
    "node-pre-gyp": "^0.13.0",
    "path": "^0.12.7",
    "semver": "^7.3.7",
    "simple-peer": "^9.11.1",
    "source-map": "^0.7.3",
    "tar": "^6.1.11",
    "tar-stream": "^2.2.0",
    "utf-8-validate": "^5.0.9",
    "uuid": "^8.3.2",
    "wrtc": "^0.4.7",
    "ws": "^7.5.7",
    "y-websocket": "^1.4.3",
    "yjs": "^13.5.35"
  }
}
