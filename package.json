{
  "name": "peercode",
  "displayName": "PeerCode",
  "description": "Realtime Collaborative Code Editor for vscode",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.67.0"
  },
  "publisher": "Liquidibrium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeerCodeProject/PeerCode"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Collaboration",
    "Sharing",
    "Remote",
    "WebRTC"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "peercode.StartSession",
        "title": "Start Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.JoinSession",
        "title": "Join Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.paint",
        "title": "start paint",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/paint.svg",
          "dark": "media/dark/paint.svg"
        }
      },
      {
        "command": "peercode.runDocker",
        "title": "run code",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/run.svg",
          "dark": "media/dark/run.svg"
        }
      },
      {
        "command": "peercode.sharePort",
        "title": "share port",
        "category": "PeerCode",
        "icon": {
          "light": "media/light/addPort.svg",
          "dark": "media/dark/addPort.svg"
        }
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "peercode.terminal",
          "title": "PeerCode Terminal"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "peercode.session",
          "name": "PeerCode"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "peercode.JoinSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.StartSession",
          "when": "view == peercode.session && viewItem == sessions",
          "group": "inline"
        },
        {
          "command": "peercode.paint",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        },
        {
          "command": "peercode.runDocker",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        },
        {
          "command": "peercode.sharePort",
          "when": "view == peercode.session && viewItem == session",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts,js --fix",
    "test": "node ./out/test/runTest.js",
    "install": "cross-env DEBUG=true npm install wrtc",
    "init": "node ./scripts/init.js",
    "init-dev": "node ./scripts/wrtc_backup/init-dev.js",
    "vsce-package": "vsce package",
    "deploy": "vsce publish",
    "pre-release": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.9",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/npmlog": "^4.1.4",
    "@types/simple-peer": "^9.11.4",
    "@types/tar-stream": "^2.2.2",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.67.0",
    "@types/webrtc": "^0.0.32",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "node-loader": "^2.0.0",
    "nodemon": "^2.0.16",
    "perfect-freehand": "^1.1.0",
    "supports-color": "^9.2.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "vsce": "^2.9.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.9",
    "@peculiar/webcrypto": "^1.4.0",
    "@types/golang-wasm-exec": "^1.15.0",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "bufferutil": "^4.0.6",
    "buildcheck": "^0.0.4",
    "dockerode": "^3.3.1",
    "dotenv": "^16.0.1",
    "events": "^3.3.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "nan": "^2.16.0",
    "node-fetch": "^3.2.5",
    "node-gyp": "^9.0.0",
    "node-pre-gyp": "^0.13.0",
    "npmlog": "^6.0.2",
    "path": "^0.12.7",
    "semver": "^7.3.7",
    "simple-peer": "^9.11.1",
    "source-map": "^0.7.4",
    "tar": "^6.1.11",
    "tar-stream": "^2.2.0",
    "utf-8-validate": "^5.0.9",
    "uuid": "^8.3.2",
    "wrtc": "^0.4.7",
    "ws": "^8.7.0",
    "y-websocket": "^1.4.3",
    "yjs": "^13.5.38"
  }
}
