{
  "name": "peercode",
  "displayName": "PeerCode",
  "description": "Realtime Collaborative Code Editor for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:peercode.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "peercode.StartSession",
        "title": "Start Session",
        "category": "PeerCode"
      },
      {
        "command": "peercode.JoinSession",
        "title": "Join Session",
        "category": "PeerCode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "install": "cross-env DEBUG=true npm install wrtc",
    "init": "node ./scripts/init.js",
    "build-go": "cd docker && cross-env GOOS=js GOARCH=wasm go build -o main.wasm"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/simple-peer": "^9.11.4",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "node-loader": "^2.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.6.4",
    "vsce": "^2.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.9",
    "@peculiar/webcrypto": "^1.3.3",
    "bufferutil": "^4.0.6",
    "dotenv": "^16.0.0",
    "google-protobuf": "^3.12.2",
    "node-fetch": "^3.2.3",
    "node-pre-gyp": "^0.13.0",
    "path": "^0.12.7",
    "simple-peer": "^9.11.1",
    "source-map": "^0.7.3",
    "utf-8-validate": "^5.0.9",
    "uuid": "^8.3.2",
    "wrtc": "^0.4.7",
    "ws": "^7.5.7",
    "y-websocket": "^1.4.3",
    "yjs": "^13.5.35"
  }
}
